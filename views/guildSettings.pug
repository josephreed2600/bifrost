extends layout.pug
block style
    link(rel='stylesheet' href='/styles/guildSettings.css')
    script(defer, src="/scripts/appSettings.js") 
    script(defer, src="/scripts/channels.js") 
block content
    section.main
         form
            section.content
                div.form-area
                    div.title
                        h1 Guild Settings 
                        div.delete.cancel X
                    section.form-body
                        div.guild-form
                            div.img-circle.img-large
                                img(src="https://ui-avatars.com/api/?background=random&name=Bi+Frost", alt="Guild Icon").img
                            div.input-area
                                div.form-block
                                    label.input-label Guild Name
                                    input(type="text", name="guildName" placeholder="Guild Name").input-field
                                    span.error-message You did it wrong sir 
                                div.form-block
                                    label.input-label User Icon
                                    label.input-label.file-input.btn.btn-purple Upload Image
                                        input(type="file", name="newUserIcon", accept="image/png, image/jpeg, image/jpg, image/svg") 
                                    span.error-message Incorrect file type
                        div.channel-area
                            h2 Channels
                            div.channel-container
                                //- This is where channels get imported                             
                            //- Add new channel box
                            div.channel.add
                                label(for="newChannelName").input-field #
                                    input#newChannelName(type="text", name="newChannelName" autocomplete="off")
                                button#addChannelBtn(type="button").btn.btn-outline-white +
                div.button-area
                    button(type="button").btn.btn-outline-red.cancel Cancel
                    p You have unsaved changes
                    button(type="submit").btn.btn-green Save Changes  