extends layout.pug
block style
    link(rel='stylesheet' href='/styles/createGuild.css')
    script(defer, src="/scripts/appSettings.js") 
block content
    section.main
        form
            section.content
                div.form-area
                    div.title
                        h1 Create A Guild 
                        div.delete.cancel X
                    div.guild-form
                        div.img-circle.img-large
                            img(src="https://ui-avatars.com/api/?background=random&name=Bi+Frost", alt="Guild Icon").img
                        div.input-area
                            div.form-block
                                label.input-label Guild Name
                                input(type="text", name="guildName" placeholder="Guild Name").input-field
                                span.error-message You did it wrong sir 
                            div.form-block
                                label.input-label User Icon
                                label.input-label.file-input.btn.btn-purple Upload Image
                                    input(type="file", name="newUserIcon", accept="image/png, image/jpeg, image/jpg, image/svg") 
                                span.error-message Incorrect file type
                div.button-area
                    button(type="button").btn.btn-outline-red.cancel Cancel
                    button(type="submit").btn.btn-green Create